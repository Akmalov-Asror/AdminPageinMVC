@{
    Layout = "~/Views/Shared/_Course.cshtml";
}

<form class="update-form" method="post" action="@Url.Action("AddCourse", "Course")">
    <input type="text" name="price" class="input" placeholder="Price" />
    <input type="text" name="description" class="input" placeholder="Description" />
    <input type="text" name="imgUrl" class="input" placeholder="ImgUrl" />
    <div class="btns">
        <button class="confirm" type="submit">Confirm</button>
        <button method="get" asp-controller="Teacher" asp-action="GetTeacherList" class="cancel">Cancel</button>
    </div>
</form>

