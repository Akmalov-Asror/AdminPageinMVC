@model AdminPageinMVC.Dto.LoginDTO

@{
	Layout = null;
}

<head>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
        * {
            user-select: none;
        }

        body {
            height: auto;
            width: auto;
            margin: 0px;
            padding: 0px;
            font-family: sans-serif;
            background: url(https://images3.alphacoders.com/891/thumb-1920-891202.jpg) no-repeat;
            background-size: cover;
        }

        .login-box {
            width: 280px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
        }

        .login-box h1 {
            float: left;
            font-size: 40px;
            border-bottom: 6px solid;
            margin-bottom: 50px;
            padding: 13px 0;
        }

        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            border-bottom: 2px solid;
            transition: .5s ease-in-out;
        }

        .textbox:hover {
            border-bottom: 2px solid gray;
        }

        .textbox i {
            color: white;
            width: 26px;
            float: left;
            text-align: center;
        }

        .textbox input {
            cursor: pointer;
            border: none;
            outline: none;
            background: none;
            color: gray;
            font-size: 18px;
            width: 80%;
            float: left;
            margin: 0 10px;
        }

        .btn {
            width: 100%;
            background: none;
            border: 2px solid white;
            color: white;
            padding: 5px;
            font-size: 18px;
            cursor: pointer;
            margin: 12px 0;
            outline: none;
            transition: .5s ease-in-out;
        }

        .btn:hover {
            box-shadow: 5px 5px gray;
            border: #808080 solid 2px;
            background-color: none;
            content:
        }

        input::placeholder {
            color: white;
        }

        input:focus {
            color: gray;
        }
        .footer{
        background:white;
        }

        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            transition: background-color 5500s ease-in-out 0s;
            -webkit-text-fill-color: white !important;
        }
	</style>
</head>
<body translate="no">
<form asp-controller="Auth" asp-action="Login" method="post" enctype="multipart/form-data" class="col-md-6" style="margin: 5px auto;">
	<div class="login-box">
		<h1>Login</h1>
		<div class="textbox">
			<i class="fa fa-user" aria-hidden="true"></i>
			<input asp-for="Email" type="text" id="form1-username" placeholder="Email">
		</div>
		<div class="textbox">
			<i class="fa fa-lock" aria-hidden="true"></i>
			<input asp-for ="Password" type="password"  id="form2-password" placeholder="Password">
		</div>
		<button asp-controller="Auth" asp-action="Login" type="submit" class="btn btn-pill btn-outline-info" style="width: 100%;">
			<i class="fa fa-sign-in mr-1"></i> Login</button>
	</div>
</form>
</body>