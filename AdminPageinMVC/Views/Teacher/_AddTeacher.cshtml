@{
    Layout = "~/Views/Shared/_Teacher.cshtml";
}

<form class="update-form" method="post" action="@Url.Action("AddTeacher", "Teacher")">
    <input type="text" name="name" class="input" placeholder="Name" required />
    <input type="text" name="type" class="input" placeholder="Description" required />
    <input type="text" name="imageUrl" class="input" placeholder="ImgUrl" required />
    <div class="btns">
        <button class="confirm" type="submit">Confirm</button>
        <button method="get" asp-controller="Teacher" asp-action="GetTeacherList" class="cancel">Cancel</button>
    </div>
</form>